<!-- Test Kutucukları -->
<% if (dataList && dataList.length> 0) { %>
    <div class="container  p-4 sm:p-8 flex flex-wrap">
        <div class="text-center mx-auto mt-10 mb-10  " data-aos="fade-up">
            <h3
                class="mb-6 px-6 font-sans text-4xl sm:text-5xl md:text-6xl font-extrabold leading-none tracking-tight text-gray-900 ">
                SMM Hazırlığa hoş geldiniz!</h3>
            <h5 class="mb-6 px-6 text-lg md:text-xl lg:text-2xl xl:text-3xl ">
                Testler</h5>
        </div>
        <div class="mx-1 grid gap-4 md:grid-cols-2 lg:grid-cols-2">
            <% dataList.forEach(function(data) { %>
                <div data-aos="fade-up" class="relative bg-white pt-6 pl-5 pb-5 pr-5 rounded-md mb-4 border group  border-gray-300 shadow-md transition-colors duration-300 ease-in-out hover:bg-gray-100">
                    <a href="/pages/test/<%=data.kategori_id%>">
                        <h2 class="mb-2 text-2xl font-medium tracking-tight text-gray-900">
                            <%=data.kategori_ad%>
                        </h2>
                        <p class="font-normal text-gray-600 ">
                            <%= data.kategori_aciklama %>
                        </p>

                        <div class="flex justify-between pr-5 mt-5">
                            <p href="" class="flex hover:underline text-blue-800">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M5.25 8.25h15m-16.5 7.5h15m-1.8-13.5l-3.9 19.5m-2.1-19.5l-3.9 19.5" />
                                </svg>

                                657
                            </p>


                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                aria-hidden="true" class="h-5 w-5 -rotate-45 group-hover:rotate-0 transition-all">
                                <path fill-rule="evenodd"
                                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                    </a>

                </div>

                <% }); %>
                    <div class="text-center mx-auto">
                        <div class="inline-flex items-center"><a
                                alt="657 Sayılı Devlet Memurları Kanunu İle İlgili Test Soruları - 1"
                                class="relative inline-flex items-center px-6 py-2 overflow-hidden text-gray-600 dark:text-gray-300 border border-current rounded group"
                                href=""><span
                                    class="absolute right-0 transition-transform translate-x-full group-hover:-translate-x-4"><svg
                                        class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg></span><span class="text-sm font-medium transition-all group-hover:mr-4">Diğer
                                    Testleri
                                    Gör</span></a></div>
                    </div>


        </div>

    </div>
    <% } else { %>
        <div class="flex items-center justify-center h-full">
            <div class="text-center">
                <h3
                    class="mb-6 text-center  px-6 font-sans text-4xl sm:text-5xl md:text-6xl font-extrabold leading-none tracking-tight text-gray-900 ">
                    Test Kategorisi bulunamadı.</h3>
            </div>

        </div>
        <% } %>
            <!-- Konu Anlatımı Kutucukları -->