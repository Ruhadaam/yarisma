<div class="container  p-4 sm:p-8 flex flex-wrap">

    <% if (dataList.length===0) { %>
        <div class="text-center mx-auto mt-10 mb-10 ">
            <h3 data-aos="fade-up"
                class="mb-6 px-6 font-sans text-4xl sm:text-5xl md:text-6xl font-extrabold leading-none tracking-tight text-gray-900 dark:text-white">
                Herhangi bir test bulunamadı.</h3>

        </div>
        <% } else { %>
            <div class="text-center mx-auto mt-10 mb-10 " data-aos="fade-up">
                <h3
                    class="mb-6 px-6 font-sans text-4xl sm:text-5xl md:text-6xl font-extrabold leading-none tracking-tight text-gray-900 dark:text-white">
                    <%= dataList[0].kategori_ad  %></h3>
                <p class="text-gray-600 sm:text-xl">Bu bölümde finansal muhasebe ile ilgili testler yer almaktadır.</p>
            </div>

            <div class="mx-1 grid gap-8 md:grid-cols-2 lg:grid-cols-2" data-aos="fade-up">



                <% dataList.forEach(function(data, i) { %>
                    <div
                        class="relative bg-white pt-6 pl-5 pb-5 pr-6 rounded-md mb-4 border group border-gray-300 shadow-md transition-colors duration-300 ease-in-out hover:bg-gray-100">

                        <h2 class="mb-3 text-2xl font-medium tracking-tight text-gray-900">
                            <%= data.test_ad %>
                        </h2>
                        <p class="font-normal text-gray-600 mb-5">
                            <%= data.kategori_aciklama %>
                        </p>


                        <div class=" flex justify-between items-center">
                            <p href="/pages/testing<%=data.test_id %>/" class="flex ">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                                </svg>
                                <span class="text-gray-400">22.11.2023</span>

                            </p>


                            <div class="inline-flex items-center"><a
                                    alt="657 Sayılı Devlet Memurları Kanunu İle İlgili Test Soruları - 1"
                                    class="relative inline-flex items-center px-6 py-2 overflow-hidden text-gray-600 dark:text-gray-300 border border-current rounded group"
                                    href="/pages/testing/<%=data.test_id %>"><span
                                        class="absolute right-0 transition-transform translate-x-full group-hover:-translate-x-4"><svg
                                            class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                        </svg></span><span
                                        class="text-sm font-medium transition-all group-hover:mr-4">Teste Başla</span></a></div>
                        </div>


                    </div>


                    <% }); %>
                        <% } %>
            </div>

</div>